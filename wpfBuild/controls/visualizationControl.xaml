<UserControl x:Class="wpfBuild.controls.visualizationControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="300" Width="300">
	
	<UserControl.Resources>
		<ControlTemplate x:Key="vertBar" TargetType="{x:Type Control}">
			<StackPanel>
				<Rectangle Fill="Blue" Margin="3,0" Height="150">
					
				</Rectangle>
				
				<!--
				 put a line here that is bound to the height(TOP) of the rectangle, have animiation to do the falling action though.
						if it's going upwards then it should happen immediately
				-->
				
			</StackPanel>
		</ControlTemplate>


	</UserControl.Resources>
	
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />			
			<ColumnDefinition />						
			<ColumnDefinition />									
			<ColumnDefinition />												
			<ColumnDefinition />															
			<ColumnDefinition />																		
			<ColumnDefinition />																					
			<ColumnDefinition />																								
			<ColumnDefinition />																											
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition />
		</Grid.RowDefinitions>
		
		<Control Focusable="False" Template="{DynamicResource vertBar}"></Control>

	</Grid>
</UserControl>
